<Application
    x:Class="AdeptlyAdaptive.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AdeptlyAdaptive"
    xmlns:data="using:AdeptlyAdaptive.Models"
    >
    <Application.Resources>
        <DataTemplate x:DataType="data:NewsI" x:Key="NewsItemTemplate">
            <StackPanel>
                <Image Source="{x:Bind Image}" Stretch="UniformToFill" />
                <TextBlock Text="{x:Bind Headline}"/>
                <TextBlock Text="{x:Bind Subhead}"/>
                <TextBlock Text="{x:Bind Category}"/>
                
            </StackPanel>
        </DataTemplate>
    </Application.Resources>

</Application>
